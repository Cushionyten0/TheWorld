@model TheWorld.ViewModels.LoginViewModel
@{
  ViewBag.Title = "Login";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script> 
}
<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h3>Login</h3>
    <form method="post" novalidate>
      <div asp-validation-summary="ModelOnly"></div>
      <div class="form-group">
        <label asp-for="Username"></label>
        Default username: newuser
        <input asp-for="Username" class="form-control" placeholder="newuser" />
        <span asp-validation-for="Username"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password"></label>
        Default password: P@ssw0rd!
        <input type="password" asp-for="Password" class="form-control" placeholder="P@ssw0rd!"/>
        <span asp-validation-for="Password"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Login" class="btn btn-lg btn-success" />
      </div>
    </form>
  </div>
</div>
