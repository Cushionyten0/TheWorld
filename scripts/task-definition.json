{
  "family": "${ECS_TASK}",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME}:${IMAGE_VERSION}",
      "name": "${IMAGE_NAME}",
      "cpu": 128,
      "memory": 256,
      "essential": true,
      "links": ["${IMAGE_NAME}-theworld"],
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "VIRTUAL_HOST",
          "value": "${AWS_VIRTUAL_HOST}"
        },
        {
          "name": "SERVICESTACK_LICENSE",
          "value": "${SERVICESTACK_LICENSE}"
        },
        {
          "name": "TheWorld_HOST",
          "value": "${IMAGE_NAME}-theworld"
        }
      ]
    },
    {
      "name": "${IMAGE_NAME}-theworld",
      "image": "theworld:3.2",
      "cpu": 128,
      "memory": 128,
      "essential": true
    }
  ]
}
